/ -binding.pry
.card(style = "margin: 20px 0px;")
  .card-header
    = link_to 'Articles', articles_path
    = paginate @articles
    = page_entries_info @articles
  .card-body
    .row
      - @articles.each do |article| 
        .card.text-center.col-lg-4.col-md-6(style = "margin: 5px 0px;")          
          //- binding.pru
          = link_to image_tag(article.image.articles.url), article, :class => "img card-img-top"          
          -# = link_to image_tag('images.jpg'), article, :class => "img card-img-top"
          
          -# = image_url('images.jpg')
          .card-body       
            %h5.card-title 
              =article.name
            %p.card-text
              Description:
              =article.descrition
            %p.card-text
              =article.content              
              = link_to article.file.path
            %p.card-text
              Comment:              
              =article.comment
