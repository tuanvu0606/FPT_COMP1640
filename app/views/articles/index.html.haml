- if user_signed_in? && current_user.admin       
  %p#notice= notice
  %h1 Articles
  %table
    %thead
      %tr
        %th Name
        %th Description
        %th Content
        %th(colspan="3")
    %tbody
      - @articles.each do |article|
        %tr
          %td= article.name
          %td= article.description
          %td= article.content
          %td= link_to 'Show', article
          %td= link_to 'Edit', edit_article_path(article)
          %td= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }
  %br
  = link_to 'New Article', new_article_path
- else           
  .container
    .row
      .col-lg-3.col-md-12(style = "margin: 10px 0px;")
        %ul.list-group
          %li.list-group-item(style = "background-color: #1E90FF; color: white;") Recent post
          - @articles_in_order.each do |article|
            %li.list-group-item
              =link_to article.name, article
      .col-lg-9.col-md-12
        - @articles.each do |article| 
          .card.text-center(style ="margin-top:10px;")
            .card-header
              Featured
            .card-body
              %h5.card-title 
                =article.name
              %p.card-text 
                =article.description
              //%a.btn.btn-primary
              //  = link_to 'Details', article
              = link_to 'Details', article, :class => "a btn btn-primary"
            .card-footer.text-muted
              Updated at:
              =article.updated_at

    