        <li> <%= link_to '<i class="fa fa-users"></i><span>Tutors</span>'.html_safe, admin_lte_tutors_path %> </li>
        <li> <%= link_to '<i class="fa fa-users"></i><span>Blogs</span>'.html_safe, admin_lte_blogs_path %> </li>
        <li> <%= link_to '<i class="fa fa-users"></i><span>Chat rooms</span>'.html_safe, admin_lte_rooms_path %> </li>
        
      </ul>
    </section>
  </aside>
<% else %>
