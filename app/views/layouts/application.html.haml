!!!
%html
  %head
    %meta(content="text/html; charset=UTF-8" http-equiv="Content-Type")/
    %title ECommerceApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      .container 
        %nav.navbar.navbar-expand-lg.navbar-light.fixed-top(style = "background-color: white  ;")
          .container
            %a.navbar-brand#HomeTopPhone(href="#") Phone
            %button.navbar-toggler(aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation" data-target="#navbarText" data-toggle="collapse" type="button")
              %span.navbar-toggler-icon
       
      .container
        %nav.navbar.navbar-expand-lg.navbar-light.d-flex.bd-highlight(style = "background-color: white; padding: 6px;")
          %a.navbar-brand.p-2.flex-fill.bd-highlight#checkid(href="#") App
      .container
        %nav.navbar.navbar-expand-lg.navbar-light.d-flex.bd-highlight(style = "background-color: white; padding: 6px;")
          %a.navbar-brand.p-2.flex-fill.bd-highlight#checkid(href="#") App

      .container
        %nav.navbar.navbar-expand-lg.navbar-light.d-flex.bd-highlight.justify-content-begin(style = "background-color: white;")
          %a.navbar-brand(href=home_path) Home            
          %a.navbar-brand(href=categories_path) Category
          %a.navbar-brand(href=articles_path) Articles

    .container
      = yield

    %footer(style = "margin-top: 50px;")
      .container.d-flex.bd-highlight
        .p-2.flex-fill.bd-highlight
          .single_footer.author_information
            %h4 Store Information
            %dl
              %dd
                %i.fa.fa-home
                16 Purvis Street #2-00
              %dd
                %i.fa.fa-phone
                (+1)111-111-111
              %dd 
                %a(href="#")
                  %i.fa.fa-envelope-square
                  www.yoose.com
        .p-2.flex-fill.bd-highlight
          .single_footer
            %h4 Information
            %dl
              %dd
                %a
                  %i.fa 
                  
              %dd   
                  
        .p-2.flex-fill.bd-highlight
          .single_footer
            %h4 My account
            %dl
              %dd
                %a(href="#")
                  %i.fa
                  = link_to 'Shopping cart', @order                  
        .p-2.flex-fill.bd-highlight
          .single_footer
            %h4 instagram
            .instagram_img
              #instafeed
      .container
        .row
          .col-lg-6.col-md-6.col-sm-6
            .widget_copyright
              %p
                copyright Â© 2018
          .col-lg-6.col-md-6.col-sm-6
            .payment
